@model IEnumerable<theCoffee.Models.CTPhieuNhap>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}


<div class="content-wrapper">
    <div class="row">

        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Danh sách chi tiết phiếu nhập</h4>
                    <div class="box-header">
                        <a href="/Admin/CTPhieuNhap/Create" class="btn btn-sm btn-success"><i class="fa fa-plus"></i>Thêm mới</a>
                    </div>
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.TenHang)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.DonViTinh)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.SoLuong)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Gia)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.TongGia)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.PhieuNhap.MaPN)
                                    </th>
                                    <th></th>
                                </tr>
                            </thead>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.TenHang)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.DonViTinh)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.SoLuong)
                                    </td>
                                    <td>
                                        @Html.FormatValue(item.Gia, "{0:#,###}")
                                    </td>
                                    <td>
                                        @Html.FormatValue(item.TongGia, "{0:#,###}")
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.PhieuNhap.MaPN)
                                    </td>
                                    <td>
                                        @Html.ActionLink("Edit", "Edit", new { id = item.MaCTPN }) |
                                        @Html.ActionLink("Delete", "Delete", new { id = item.MaCTPN })
                                    </td>
                                </tr>
                            }
                        </table>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>
<!-- content-wrapper ends -->
