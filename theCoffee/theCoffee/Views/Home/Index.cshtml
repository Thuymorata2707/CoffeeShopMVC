                <p>Far far away, behind the word mountains, far from the countries Vokalia and Consonantia, there live the blind texts.</p>
            </div>
        </div>
        <div class="row">
            @{
                var HotProduct = (List<theCoffee.Models.menu>)ViewBag.listHotItem;
                for (int i = 0; i < HotProduct.Count; i++)
                {
                    <div class="col-md-3">
                        <div class="menu-entry">
                            <a href="/Menu/ProductDetail/@HotProduct[i].MaSP" class="img" style="background-image: url(@HotProduct[i].HinhAnh);"></a>
                            <div class="text text-center pt-4">
                                <h3><a href="/Menu/ProductDetail/@HotProduct[i].MaSP">@HotProduct[i].TenSP</a></h3>
                                <p>@HotProduct[i].MoTa</p>
                                <p class="price"><span>@HotProduct[i].GiaBan</span></p>
                                <p><a href="/Cart/AddToCart/@HotProduct[i].MaSP" class="btn btn-primary btn-outline-primary">Thêm Vào Giỏ</a></p>
                            </div>
                        </div>
                    </div>
                }
            }
        </div>
    </div>
</section>

